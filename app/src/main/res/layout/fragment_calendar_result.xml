<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80EDBB72">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_white_24"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/month_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            tools:ignore="MissingConstraints">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="하루 권장 칼로리 섭취량" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar"
            android:max="100"
            android:id="@+id/progress_cal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="하루 권장 탄수화물 섭취량" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar"
            android:max="100"
            android:id="@+id/progress_car" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="하루 권장 단백질 섭취량" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar"
            android:max="100"
            android:id="@+id/progress_pro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="하루 권장 지방 섭취량" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar"
            android:max="100"
            android:id="@+id/progress_fat" />
    </LinearLayout>

</LinearLayout>